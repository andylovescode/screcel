{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useNamingConvention": {
					"options": {
						"conventions": [
							{
								"formats": ["snake_case"],
								"selector": {
									"kind": "variable"
								}
							},
							{
								"formats": ["snake_case"],
								"selector": {
									"kind": "function"
								}
							},
							{
								"formats": ["PascalCase"],
								"selector": {
									"kind": "typeLike"
								}
							}
						]
					},
					"fix": "safe",
					"level": "warn"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
